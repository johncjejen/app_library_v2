<!DOCTYPE html>
<html>
    <head>
        <title>copy History  book</title>
    </head>
    <body>
         <div id="templatemo_container">
            <div id="templatemo_menu">
                <ul>
                    <% if current_user %>
                        <li><a href="/" class="current">Hello <%= current_user.email %></a></li>
                        <li><a href="/">Home</a></a></li>
                        <% if current_user.admin? %>
                            <li><a href="/books/new_book.html">Create Books</a></a></li>
                        <% else %>
                            <li><a href="/books/my_books">My Books</a></li>            
                        <% end %>
                        <li><%= link_to "Log off", destroy_user_session_path, 'data-turbo-method': :delete%></li> 
                    <% else %>
                        <li><a href="/" class="current">You are not sign in</a></li>  
                        <li><%= link_to "Sign up", new_user_registration_path %></li> 
                        <li><%= link_to "Login", new_user_session_path %></li>
                    <% end %>
                </ul>
            </div> 
    
            <div id="templatemo_header">
            </div>
            
            <div id="templatemo_content">
                <div id="templatemo_content_right">
                    <% if !@copy_history_details.blank? %>
                        <div class="title_center">
                            <h2 class="h2_class"><%=@copy_history_details.first.title.upcase%></h2>
                        </div>
                        <div class="subtitle_center">
                            <h2 class="h2_class">Copy #<%=@copy_history_details.first.copy_number%></h2>
                        </div>
                        <% @copy_history_details.each do |copy_history_detail| %>
                            <div class="templatemo_product_box_history">
                                <table>
                                    <tr><th class="title_detail_table" scope="row" colspan="2">Borrow # <%=copy_history_detail.id%></th></tr>
                                    <tr><td>Status</td>
                                    <% if copy_history_detail.status == 0%>
                                        <td>Borrowed</td>
                                    <% else %>
                                        <td>Returned</td>
                                    <% end %>
                                    </tr>
                                    <tr><td>Borrow Date</td>
                                    <td><%=copy_history_detail.borrow_date%></td></tr>
                                    <tr><td>Due Date</td>
                                    <td><%=copy_history_detail.due_date%></td></tr>
                                    <tr><td>Return Date</td>
                                    <td><%=copy_history_detail.return_date%></td></tr>
                                    <tr><td>User</td>
                                    <td><%=copy_history_detail.email%></td></tr>
                                </table>
                            </div>
                        <%end%>
                    <% else %>
                        <div class="title_center">
                            <h2 class="h2_class">No records</h2>
                        </div>
                    <%end%>
                </div>
            </div>
            <%= link_to "Back", :back ,:style=>'text-decoration : none;text-align:center', :id=>"back_btn" %>
            <div id="templatemo_footer">
                <a href="/">Development on Ruby on Rails</a> | 
                Copyright Â© 2022 <a href="https://linkedin.com/in/ing-john-carlos-jejen-corredor/"><strong>John Jejen</strong></a> 
            </div> 
        </div>
    </body>
</html>